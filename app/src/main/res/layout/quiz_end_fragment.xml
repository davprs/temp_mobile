<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/res_back1">

    <TextView
        android:background="@drawable/rounded_corner_color_1"
        android:id="@+id/quiz_result_category"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/quiz_result_difficulty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:background="@drawable/rounded_corners_color_2"
        android:id="@+id/quiz_result_difficulty"
        android:layout_width="300sp"
        android:paddingVertical="20dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_result_category"
        app:layout_constraintBottom_toTopOf="@+id/quiz_result_score"/>

    <TextView
        android:background="@drawable/rounded_corners_color_3"
        android:id="@+id/quiz_result_score"
        android:layout_width="300sp"
        android:paddingVertical="20dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_result_difficulty"
        app:layout_constraintBottom_toTopOf="@+id/quiz_result_best_score"/>

    <TextView
        android:background="@drawable/rounded_corners_color_4"
        android:id="@+id/quiz_result_best_score"
        android:layout_width="300sp"
        android:paddingVertical="20dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_result_score"
        app:layout_constraintBottom_toTopOf="@+id/quiz_result_goto_home"/>

    <Button
        android:id="@+id/quiz_result_goto_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/refined_answer_diff_2_button"
        android:text="@string/quitz_result_goto_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>